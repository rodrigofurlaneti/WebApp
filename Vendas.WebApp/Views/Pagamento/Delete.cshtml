@model Vendas.WebApp.Models.Pagamento;
@{
    ViewData["Title"] = "Apagar pagamento";
}
<h2 class="display-4">Apagar pagamento</h2>
<h5 class="display-4">Tem certeza que deseja apagar a comanda número @Html.DisplayFor(Model => Model.Id)?</h5>
<form asp-action="Delete">
    <input type="submit" value="Apagar" class="btn btn-sm btn-danger" />
</form>
<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
</div>