@model Vendas.WebApp.Models.Usuario
@{
    ViewData["Title"] = "Apagar usuario";
}
@await Html.PartialAsync("~/Views/Shared/_PartialNav.cshtml")
<h2 class="display-4">Apagar usuario</h2>

<h5 class="display-4">Tem certeza que deseja apagar o usuario @Html.DisplayFor(Model => Model.Nome)?</h5>
<form asp-action="Delete">
    <input type="submit" value="Apagar" class="btn btn-sm btn-danger" />
</form>
<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
</div>