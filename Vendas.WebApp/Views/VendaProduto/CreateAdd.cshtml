@model Vendas.WebApp.Models.ViewModels.VendaProdutoFormViewModels
@{
    ViewData["Title"] = "Adicionar venda produto";
}
<h2 class="display-4">Adicionar venda produto</h2>
<div class="alert alert-success" role="alert">
    Enviado!
</div>
<form asp-action="Create">
    <input asp-for="@Model.VendaProduto.Id" type="hidden" class="form-control form-control-sm" />
    <div class="form-row">
        <div class="form-group-sm col-md-6">
            <div class="form-group">
                <label asp-for="@Model.VendaProduto.ProdutoId" class="control-label">Produto:</label>
                <select asp-for="@Model.VendaProduto.ProdutoId" asp-items="@(new SelectList(Model.Produto,"Id","Nome"))" class="form-control form-control-sm"></select>
                <span asp-validation-for="@Model.VendaProduto.ProdutoId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-sm col-md-6">
            <div class="form-group">
                <label asp-for="@Model.VendaProduto.Quantidade" class="control-label">Produto:</label>
                <input asp-for="@Model.VendaProduto.Quantidade" type="number" class="form-control form-control-sm"></input>
                <span asp-validation-for="@Model.VendaProduto.Quantidade" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-row botao">
        <div class="col-md-11">
            <a asp-action="Index">
                <input type="button" value="Voltar" class="btn btn-sm btn-secondary" />
            </a>
        </div>
        <div class="col-md-1">
            <input type="submit" value="Salvar" class="btn btn-sm btn-success" />
        </div>
    </div>
</form>

<script>
    var params = window.location.search.substring(1).split('&');
    var paramArray = {};
    for (var i = 0; i < params.length; i++) {
        var param = params[i].split('=');
        paramArray[param[0]] = param[1];
    }
    console.log(paramArray);
    var VendaId = paramArray['VendaId'];
    console.log(VendaId);
    document.querySelector("[name='VendaProduto.VendaId']").value = VendaId;
</script>