@model Vendas.WebApp.Models.ViewModels.UsuarioFormViewModels
@{
    ViewData["Title"] = "Adicionar usuario";
}
<h2 class="display-4">Adicionar usuario</h2>
<form asp-action="Create">
    <input asp-for="@Model.Usuario.Id" type="hidden" class="form-control form-control-sm" />
    <div class="form-row">
        <div class="form-group-sm col-md-3">
            <div class="form-group">
                <label asp-for="@Model.Usuario.Nome" class="control-label">Nome:</label>
                <input asp-for="@Model.Usuario.Nome" class="form-control form-control-sm" />
                <span asp-validation-for="@Model.Usuario.Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-sm col-md-3">
            <div class="form-group">
                <label asp-for="@Model.Usuario.Email" class="control-label">E-mail:</label>
                <input asp-for="@Model.Usuario.Email" maxlength="50" class="form-control form-control-sm" />
                <span asp-validation-for="@Model.Usuario.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-sm col-md-3">
            <div class="form-group">
                <label asp-for="@Model.Usuario.Senha" class="control-label">Senha:</label>
                <input asp-for="@Model.Usuario.Senha" type="password" class="form-control form-control-sm" />
                <span asp-validation-for="@Model.Usuario.Senha" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-sm col-md-3">
            <div class="form-group">
                <label asp-for="@Model.Usuario.IdCargo" class="control-label">Categoria:</label>
                <select asp-for="@Model.Usuario.IdCargo" asp-items="@(new SelectList(Model.Cargo,"Id","Nome"))" class="form-control form-control-sm"></select>
                <span asp-validation-for="@Model.Usuario.IdCargo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-row botao">
        <div class="col-md-11">
            <a asp-action="Index">
                <input type="button" value="Voltar" class="btn btn-sm btn-secondary" />
            </a>
        </div>
        <div class="col-md-1">
            <input type="submit" value="Salvar" class="btn btn-sm btn-success" />
        </div>
    </div>
</form>
